/* aui/packages/tabs/index.wxss */
.aui-tabs__bar {
  text-align: center;
  padding: 9px 0 11px 0;
}
.aui-tabs__nav {
  display: inline-block;
  border-bottom: 1px solid #E7E7E7;
}
.aui-tabs__tab { 
  display: inline-block; 
  font-size: 12px; 
  line-height: 18px; 
  padding: 9px 0 7px 0; 
  margin: 0 25px; 
  color: #BDBDBD;
}
.aui-tabs__tab:first-of-type { 
  margin-left: 0; 
}
.aui-tabs__tab:last-of-type { 
  margin-right: 0; 
}
.aui-tabs__tab_active {
  position: relative;
  color: #F77909;
}
.aui-tabs__tab_active::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  right: 0;
  bottom: -1px;
  z-index: 1;
  height: 2px;
  background: #F77909;
}
.aui-tabs__content {
  padding: 0 15px;
}