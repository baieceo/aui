 /* aui/packages/button/index.wxss */
.aui-btn {
  position: relative;
  text-align: center;
  vertical-align: middle;
  touch-action: manipulation;
  cursor: pointer;
  background-image: none;
  white-space: nowrap;
  user-select: none;
  font-size: 24rpx;
  border-radius: 12rpx;
  border: none !important;
  text-decoration: none;
  height: 60rpx;
  line-height: 60rpx;
  background:linear-gradient(90deg, #FC8067, #FF6A4C) !important;
  color: #FFF !important;
}

.aui-btn_hover {
  opacity: .9;
}

.aui-btn_long {
  display: block;
  width: 100%;
  flex: 1;
}

.aui-btn_large {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}

.aui-btn_small {
  height: 48rpx;
  line-height: 48rpx;
  font-size: 20rpx;
}

.aui-btn_primary {
  background: linear-gradient(90deg, #FC8067, #FF6A4C) !important;
  color: #FFF !important;
}

.aui-btn_ghost {
  background: rgba(0, 0, 0, 0) !important;
  color: #666 !important;
  border: 1rpx solid #666 !important;
}

.aui-btn_success {
  background:#232931 !important;
  color: #fff !important;
}

.aui-btn_warning {
  background:#db5e58 !important;
  color: #fff !important;
}

.aui-btn_ghost.aui-btn_primary {
  background:#FFF !important;
  color: #FF6A4C !important;
  border: 1rpx solid #FF6A4C !important;
}

.aui-btn_ghost.aui-btn_warning {
  background:#FFF !important;
  color: #db5e58 !important;
  border: 1rpx solid #db5e58 !important;
}

.aui-btn_error {
  background:#232931 !important;
  color: #fff !important;
}

.aui-btn_info {
  background:#232931 !important;
  color: #fff !important;
}

.aui-btn_circle {
  border-radius: 30rpx;
}

.aui-btn_large.aui-btn_circle {
  border-radius: 40rpx;
}

.aui-btn_small.aui-btn_circle {
  border-radius: 24rpx;
}

.aui-btn_loading {
  opacity: .6;
}

.aui-btn__loading-inner {
  display: inline-block;
  margin-right: 24rpx;
  vertical-align: middle;
  width: 28rpx;
  height: 28rpx;
  background: transparent;
  border-radius: 50%;
  border: 4rpx solid #fff;
  border-color: #fff #fff #fff transparent;
  animation: btn-spin 0.6s linear;
  animation-iteration-count: infinite;
}

.aui-btn_disabled, .aui-btn_disabled.aui-btn_hover {
  color: #e8e8e8 !important;
  background: #ccc !important;
  border-color: #ccc !important;
  opacity: 1;
}

.aui-btn_inline {
  display: inline-block;
}

@keyframes btn-spin {
  0% {
    transform: rotate(0);
  }

  100% {
    transform: rotate(360deg);
  }
}